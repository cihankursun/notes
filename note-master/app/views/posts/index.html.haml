- content_for :toolbar do
  = link_to new_post_path, class: 'btn btn-default' do
    %i.icon-plus
    = t('action_button.new', resource_name: Post.model_name.human)

.panel.panel-default.grid
  .panel-body
    =blankable(@posts)
  .panel-footer
    .pagination.pagination-sm
      = will_paginate @posts, renderer: BootstrapPagination::Rails, bootstrap: 3
