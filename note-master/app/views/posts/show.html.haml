- content_for :toolbar do
  = link_to edit_post_path(@post ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Post.model_name.human)
  .panel-body
    = show_for @post do |s|
      = s.attribute :title
      = s.attribute :body
      = s.attribute :is_public
