.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for(@post) do |f|
      = f.error_notification

      .form-inputs
        = f.input :title
        = f.input :body
        = f.input :is_public

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), posts_path, class: 'btn'
